@{
	ViewBag.Title = "Home";
	Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@section Scripts{
	<script type="text/javascript" src="~/Scripts/pvtoggle.js"></script>
}
<!DOCTYPE html>

<html>
<body>
	<h1>MVC Movie Rental</h1>
	<div class="row">
		<div class="col-lg-12" id="index-subnavigation">
			<div class="btn-group" style=" margin-bottom: 10px; margin-top: 10px;">
				<button class="btn btn-info" style="width:120px" id="LoginButton">Login</button>
				<button class="btn btn-success" style="width:120px" id="RegButton">Register</button>
			</div>
		</div>
	</div>

	<div id="content">
		@if (ViewData.ModelMetadata.ModelType == typeof(MoviesRental.Models.Credentials))
		{
			@Html.Partial("Login")
		}
		else if (ViewData.ModelMetadata.ModelType == typeof(MoviesRental.Models.Customer))
		{
			@Html.Partial("Register")
		}
		else
		{
			@Html.Partial("Login")
		}
	</div>
</body>
</html>
@model IEnumerable<MoviesRental.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("Create New", "MovieCreate", null, new { @class = "btn btn-success" })
</p>
<table class="table" style="width:100%">
    <tr>
        <th>
            Title
        </th>
        <th>
            Released On
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Copies)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Copies)
            </td>
            <td>
                @Html.ActionLink("Edit", "MovieEdit", new { id = item.MovieID }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Details", "MovieDetails", new { id = item.MovieID }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "MovieDelete", new { id = item.MovieID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

@model IEnumerable<MoviesRental.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<p>
    @Html.ActionLink("Create New", "CustCreate", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if(item.CustomerID == 1)
        {
            continue;
        }
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.ActionLink("Edit", "CustEdit", new { id = item.CustomerID }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Details", "CustDetails", new { id = item.CustomerID }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "CustDelete", new { id = item.CustomerID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
